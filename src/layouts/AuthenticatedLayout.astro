---
import "../styles/global.css";
import type { AuthUserBasicDto } from "@/types";

interface Props {
  title?: string;
  user: AuthUserBasicDto;
}

const { title = "Activities - Activity Logger", user } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    <div class="flex min-h-screen flex-col">
      <!-- Navigation area - TopBar will be inserted here -->
      <nav id="top-bar-root" class="sticky top-0 z-50 border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
        <!-- TopBar React component will be mounted here via client:load -->
      </nav>

      <!-- Main content area -->
      <main class="flex-1">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    min-height: 100vh;
  }
</style>
